<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E864"
    tools:context="com.example.food_selling_app.SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng ký"
        android:textColor="#FB6D00"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="320dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <EditText
                    android:id="@+id/edtUserS"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:drawableLeft="@drawable/user"
                    android:background="@drawable/form_background"
                    android:drawableTint="#676767"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Tên đăng nhập" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtPassS"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/pass"
                    android:drawableTint="#676767"
                    android:background="@drawable/form_background"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="Mật khẩu" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtConfPassS"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:drawablePadding="12dp"
                    android:drawableLeft="@drawable/pass"
                    android:drawableTint="#676767"
                    android:background="@drawable/form_background"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:hint="Xác nhận mật khẩu" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edtEmailS"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:drawableTint="#676767"
                    android:drawableLeft="@drawable/email"
                    android:background="@drawable/form_background"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="Địa chỉ Email"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/txtLoginS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có tài khoản?Đăng nhập"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="14dp">

                <Button
                    android:id="@+id/btnSignup"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_background"
                    android:textColor="#FFFFFF"
                    android:text="Đăng ký"
                    android:textSize="22dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>