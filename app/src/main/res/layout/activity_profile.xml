<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/imagesprofile"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/edtProUser"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/user"
                android:background="@drawable/forgot_background_form"
                android:inputType="textPersonName"
                android:hint="Tên đăng nhập" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/edtProPass"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/pass"
                android:background="@drawable/forgot_background_form"
                android:inputType="textPassword"
                android:hint="Mật khẩu" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/edtProEmail"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/email"
                android:background="@drawable/forgot_background_form"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/edtProName"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/name"
                android:background="@drawable/forgot_background_form"
                android:inputType="textPersonName"
                android:hint="Name" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/edtProAddress"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/location"
                android:background="@drawable/forgot_background_form"
                android:inputType="textPersonName"
                android:hint="Address" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/edtProPhone"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:ems="10"
                android:drawablePadding="12dp"
                android:paddingLeft="16dp"
                android:textSize="20dp"
                android:drawableLeft="@drawable/phone"
                android:background="@drawable/forgot_background_form"
                android:inputType="phone"
                android:hint="Số điện thoại" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="28dp">

            <Button
                android:id="@+id/btnProUpdate"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_background"
                android:text="Cập nhật" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>