<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    xmlns:tools="http://schemas.android.com/tools"

    <TextView
        android:id="@+id/texttensp2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="1dp"
        android:gravity="center_vertical"
        android:text="Tên sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textngaydathang2"
        android:layout_width="133dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="ngày đặt hàng"
        app:layout_constraintEnd_toStartOf="@+id/textsoluongsp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textgiasp2"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:gravity="center"
        android:text="giá tiền"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textsoluongsp2"
        app:layout_constraintTop_toBottomOf="@+id/texttensp2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toStartOf="@+id/texttensp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textsoluongsp2"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Số lượng"
        app:layout_constraintEnd_toStartOf="@+id/textgiasp2"
        app:layout_constraintStart_toEndOf="@+id/textngaydathang2"
        app:layout_constraintTop_toBottomOf="@+id/texttensp2" />
</androidx.constraintlayout.widget.ConstraintLayout>